<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/cattimetextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="5dp"
        android:text="TIME"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/catimgview"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_below="@+id/cattimetextView"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/cattitletextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/catimgview"
        android:gravity="center"
        android:padding="5dp"
        android:text="TIME"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/catdesctextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/cattitletextView"
        android:gravity="center"
        android:padding="5dp"
        android:text="TIME" />

</RelativeLayout>